<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    app:cardBackgroundColor="#afb1b6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/deleteimage"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/blackwidowv3">

        </ImageView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/deletenameproduct"
            android:text="Razer Black Widow V3"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp">

        </TextView>

        <TextView
            android:id="@+id/deleteprice"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="120dp"
            android:text="Rp. 350.000"
            android:textColor="#000000"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:id="@+id/deletedetail"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:textSize="12dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="70dp"
            android:text="Kondisi masih pemakaian 80%"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/delete1"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>